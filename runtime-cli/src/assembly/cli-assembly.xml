<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- Readme, License and Notice -->
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.basedir}</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>

        <!-- main resources -->
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.basedir}/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>application-dev.yml</exclude>
                <exclude>application-test.yml</exclude>
                <exclude>banner.txt</exclude>
                <exclude>logback.xml</exclude>
            </excludes>
        </fileSet>

        <!-- main application jar file -->
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>${project.parent.name}-${project.parent.version}.jar</include>
            </includes>
        </fileSet>

        <!-- run scripts-->
        <fileSet>
            <outputDirectory>./bin</outputDirectory>
            <directory>target/bin</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <!-- log directory -->
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <directory>.</directory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>

        <!-- documentation -->
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.basedir}/../integrationtests/${project.build.directory}/generated-docs</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
